<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lachlanmitchell.mmamath">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_mma_math"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_mma_math"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.RankingsActivity"
            android:label="@string/mma_rankings_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.FighterActivity"
            android:label="@string/fighter_profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.FighterDetailActivity"
            android:label="@string/fighter_profile"
            android:screenOrientation="portrait" />
        <activity android:name=".view.fragment.CardContainerFragment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.activity.LegendActivity"
            android:label="@string/title_activity_legend"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>